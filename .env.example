# Environment Configuration Template
# Copy this file to .env and update values as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False
API_WORKERS=1

# Dashboard Configuration
#
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501

# MLflow Configuration
MLFLOW_TRACKING_URI=./mlflow_logs
MLFLOW_EXPERIMENT_NAME=predictive_maintenance

# Model Configuration
MODEL_NAME=lightgbm
# Options: lightgbm, xgboost, xgboost_optimized, random_forest, logistic_regression

# Training Configuration
RANDOM_STATE=42
TEST_SIZE=0.15
VAL_SIZE=0.15
USE_SMOTE=True

# LightGBM Hyperparameters
LGBM_N_ESTIMATORS=200
LGBM_MAX_DEPTH=6
LGBM_LEARNING_RATE=0.1

# XGBoost Hyperparameters
XGB_N_ESTIMATORS=200
XGB_MAX_DEPTH=6
XGB_LEARNING_RATE=0.1

# Optuna Configuration (Hyperparameter Optimization)
OPTUNA_N_TRIALS=20
OPTUNA_TIMEOUT=

# Monitoring Configuration
DRIFT_THRESHOLD=0.05
PERFORMANCE_THRESHOLD=0.05
MONITORING_SAMPLE_SIZE=500

# Retraining Configuration
RETRAIN_THRESHOLD=0.3
RETRAIN_MIN_SAMPLES=1000
RETRAIN_FORCE=False

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
